@model (List<ArticleViewModel> Articles, bool HasMore)
@using BlogProject.Core.Models.ViewModels
@using Microsoft.CodeAnalysis.Scripting


@{
    ViewData["Title"] = "Ваши статьи";
    var currentPage = int.Parse(Context.Request.Query["page"].FirstOrDefault() ?? "1");
    const int pageSize = 10;
}

<div class="container mt-5">
    <h1 class="mb-4">Статьи</h1>

    @if (Model.Articles?.Any() != true)
    {
        <div class="alert alert-info" role="alert">
            Статей пока нет.
        </div>
    }
    else
    {
        @foreach (var article in Model.Articles)
        {
            <div id="article-@article.ArticleId" class="card article-card shadow-sm">
                <div class="card-body">
                    <!-- Теги -->
                    <div class="mb-2">
                        @if (article.Tag?.Any() == true)
                        {
                            foreach (var tag in article.Tag)
                            {
                                <span class="badge bg-primary tag-badge">@tag.Text</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Тегов нет</span>
                        }
                    </div>

                    <!-- Заголовок и действия -->
                    <div class="d-flex justify-content-between align-items-center bg-light">
                        <h2 class="card-title">@article.Title</h2>
                        <div>
                            @if (article.Editable)
                            {
                                <form asp-action="EditArticle" asp-controller="AccountManager" asp-route-id="@article.ArticleId" asp-route-page="@currentPage" method="get" class="d-inline">
                                    <button type="submit" class="btn-link action-icon border-0 bg-transparent p-0" title="Редактировать">
                                        <i class="bi bi-pencil-square text-primary"></i>
                                    </button>
                                </form>
                            }
                            @if (article.Deletable)
                            {
                                <form asp-action="DeleteArticle" asp-controller="AccountManager" asp-route-id="@article.ArticleId" method="post" class="d-inline">
                                    <button type="submit" class="btn-link action-icon border-0 bg-transparent p-0" title="Удалить"
                                            onclick="return confirm('Вы уверены, что хотите удалить эту статью?');">
                                        <i class="bi bi-trash text-danger"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    <!-- Информация об авторе и дате -->
                    <p class="card-text text-muted">
                        Автор: @article.AuthorFullName | Создано: @article.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                        @if (article.UpdatedDate != null)
                        {
                            @: | Обновлено: @article.UpdatedDate?.ToString("dd.MM.yyyy HH:mm")
                        }
                    </p>

                    <!-- Содержимое статьи -->
                    <p class="card-text" style="white-space: pre-wrap;">@article.Content</p>

                    <!-- Комментарии -->
                    <h5 class="mt-4">Комментарии</h5>
                    <div id="comments-section-@article.ArticleId">
                        @if (article.Comments?.Any() != true)
                        {
                            <p class="text-muted">Комментариев пока нет.</p>
                        }
                        else
                        {
                            foreach (var comment in article.Comments)
                            {
                                <div class="comment" data-comment-id="@comment.CommentId" data-article-id="@article.ArticleId">
                                    <div class="d-flex justify-content-between align-items-center bg-light mt-2">
                                        <p class="text-muted small">
                                            Автор: @comment.Author | Создано: @comment.CreatedDate?.ToString("dd.MM.yyyy HH:mm")
                                            @if (comment.UpdatedDate != null)
                                            {
                                                @: | Обновлено: @comment.UpdatedDate?.ToString("dd.MM.yyyy HH:mm")
                                            }
                                        </p>
                                        <div>
                                            @if (comment.Editable)
                                            {
                                     
                                                <button type="submit" class="btn-link action-icon border-0 bg-transparent p-0" title="Удалить"
                                                        onclick="editComment('@article.ArticleId', '@comment.CommentId')">
                                                <i class="bi bi-pencil-square text-primary"></i>
                                                </button>
                                                
                                            }
                                            @if (comment.Deletable)
                                            {
                                                <form asp-action="DeleteComment" asp-controller="AccountManager" asp-route-id="@comment.CommentId" method="post" class="d-inline">
                                                    <button type="submit" class="btn-link action-icon border-0 bg-transparent p-0" title="Удалить"
                                                            onclick="return confirm('Вы уверены, что хотите удалить этот комментарий?');">
                                                        <i class="bi bi-trash text-danger"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                    <p class="comment-text card-text" style="white-space: pre-wrap;"> @comment.Text</p>
                                </div>

                            }
                        }
                    </div>
                    <!-- Форма для добавления комментария -->
                    <!-- AJAX-форма для добавления комментария -->
                    <div class="form-group">
                        <label for="commentText">Ваш комментарий:</label>
                        <textarea class="form-control" rows="3" id="commentText-@article.ArticleId" required></textarea>
                        <button type="button" class="btn btn-primary mt-2" onclick="addComment('@article.ArticleId')">Комментировать</button>
                    </div>

                </div>
            </div>
        }

        <!-- Пагинация -->
        <nav aria-label="Пагинация статей">
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="MainPage" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@pageSize">Предыдущая</a>
                    </li>
                }
                <li class="page-item disabled">
                    <span class="page-link">Страница @currentPage</span>
                </li>
                @if (Model.HasMore)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="MainPage" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@pageSize">Следующая</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Скрипт для добавления комментария
        function addComment(articleId) {
            var commentText = $('#commentText-' + articleId).val();
            if (commentText.trim() === '') {
                alert('Введите текст комментария.');
                return;
            }
            $.ajax({
                url: '/AccountManager/create_comment',
                type: 'POST',
                data: { ArticleId: articleId, Text: commentText },
                success: function(response) {
                    // Обновляем только секцию комментариев
                    $('#comments-section-' + articleId).html(response);
                    $('#commentText-' + articleId).val('');
                },
                error: function(xhr, status, error) {
                    console.error('Ошибка:', xhr.responseText);
                }
            });
        }

        // Скрипт для редактирования комментария
        function editComment(articleId, commentId) {
            var commentDiv = $(".comment[data-comment-id='" + commentId + "']");
            var commentText = commentDiv.find('.comment-text');
            var oldText = commentText.text().trim();
            var dateInfo = commentDiv.find('.text-muted.small');

            // Проверяем, есть ли уже существующее поле редактирования
            var editField = commentDiv.find('textarea');
            if (editField.length > 0) {
                return;
            }

            // Показываем поле ввода
            editField = $('<textarea>', {
                class: 'form-control',
                cols: '40',
                rows: '3'
            }).val(oldText);

            // Создаем кнопки "Сохранить" и "Отмена"
            var saveBtn = $('<button>', {
                type: 'button',
                class: 'btn btn-primary my-2',
                text: 'Сохранить'
            });

            var cancelBtn = $('<button>', {
                type: 'button',
                class: 'btn btn-secondary my-2',
                text: 'Отмена'
            });

            // Заменяем текст комментария на поле ввода и кнопки
            commentText.replaceWith(editField);
            commentDiv.append(saveBtn).append(cancelBtn);

            // Обработчик сохранения комментария
            saveBtn.on('click', function() {
                var editedText = editField.val().trim();
                if (editedText !== '') {
                    $.ajax({
                        url: '/AccountManager/edit_comment',
                        type: 'POST',
                        data: { CommentId: commentId, Text: editedText, ArticleId: articleId },
                        success: function(response) {
                            // Обновляем текст комментария
                            commentDiv.find('.comment-text').text(editedText);
                            // Возвращаем исходное состояние
                            var newCommentText = $('<p>', {
                                class: 'comment-text card-text',
                                style: 'white-space: pre-wrap;'
                            }).text(editedText);

                            editField.replaceWith(newCommentText);

                            // Форматируем текущую дату в формате dd.MM.yyyy HH:mm
                            var now = new Date();
                            var day = String(now.getDate()).padStart(2, '0');
                            var month = String(now.getMonth() + 1).padStart(2, '0');
                            var year = now.getFullYear();
                            var hours = String(now.getHours()).padStart(2, '0');
                            var minutes = String(now.getMinutes()).padStart(2, '0');
                            var formattedDate = `${day}.${month}.${year} ${hours}:${minutes}`;

                           // Обновляем дату комментария
                            var currentDateText = dateInfo.text();
                            var createdPart = currentDateText.split(' | Обновлено:')[0];
                            var newDateText = createdPart + ' | Обновлено: ' + formattedDate;
                            dateInfo.text(newDateText);

                            saveBtn.remove();
                            cancelBtn.remove();
                        },
                        error: function(xhr, status, error) {
                            console.error('Ошибка при сохранении комментария:', xhr.responseText);
                            alert('Произошла ошибка при сохранении комментария.');

                        }
                    });
                } else {
                    alert('Введите текст комментария.');
                }
            });

            // Обработчик отмены редактирования
            cancelBtn.on('click', function() {
                // Возвращаем исходный текст комментария и удаляем кнопки
                editField.replaceWith(commentText.clone(true));
                saveBtn.remove();
                cancelBtn.remove();
            });
        }

        // Скрипт для прокрутки страницы к заданной статье
        $(document).ready(function() {
            var articleId = '@ViewBag.ArticleId';
            if (articleId) {
                var element = document.getElementById('article-' + articleId);
                if (element) {
                    element.scrollIntoView({ behavior: 'smooth' });
                }
            }
        });
    </script>

};