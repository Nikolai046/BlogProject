@* Path: BlogProject.Web/Views/Shared/Error.cshtml или BlogProject.Web/Views/Error/Error.cshtml *@
@model BlogProject.Core.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = $"Ошибка {Model.StatusCode}";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <h1 class="display-1 text-danger">Ошибка @Model.StatusCode</h1>
            <h2 class="text-muted">@ViewData["Title"]</h2>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <p class="lead mt-4">@Model.Message</p>
            }
            else
            {
                <p class="lead mt-4">
                    К сожалению, при обработке вашего запроса произошла ошибка.
                </p>
            }

            @if (Model.ShowRequestId)
            {
                <p class="mt-3">
                    <small><strong>ID запроса:</strong> <code>@Model.RequestId</code></small>
                </p>
            }

            <div class="mt-4">
                <a href="/" class="btn btn-primary">Вернуться на главную</a>
            </div>

        </div>
    </div>
</div>